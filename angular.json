{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",

  "projects": {
    "ziti-console": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/app-ziti-console",
      "sourceRoot": "projects/app-ziti-console/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/app-ziti-console",
            "index": "projects/app-ziti-console/src/index.html",
            "main": "projects/app-ziti-console/src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "projects/app-ziti-console/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/app-ziti-console/src/favicon.ico",
              "projects/app-ziti-console/src/assets",
              {
                "glob": "**/*",
                "input": "./node_modules/ziti-console-lib/assets/",
                "output": "/assets"
              },
              {
                "glob": "**/*",
                "input": "./node_modules/ziti-console-lib/html/",
                "output": "/assets/pages"
              }
            ],
            "styles": [
              "projects/ziti-console-lib/src/lib/shared-assets/styles/global.scss",
              "projects/app-ziti-console/src/styles.scss",
              "node_modules/primeicons/primeicons.css"
            ],
            "scripts": [],
            "preserveSymlinks": true,
            "allowedCommonJsDependencies": [
                "file-saver",
                "jquery",
                "lottie-web",
                "moment/moment",
                "lodash",
                "ajv",
                "ajv-formats",
                "semver",
                "@stoplight/json-ref-resolver",
                "angular-csv-ext/dist/Angular-csv"
             ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "10mb",
                  "maximumError": "16mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all",
              "sourceMap": {
                "scripts": true,
                "styles": true,
                "vendor": true
              },
              "aot": true,
              "optimization": true,
              "sourceMap": false,
              "extractLicenses": true,
              "vendorChunk": true,
              "buildOptimizer": true
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "outputHashing": "none",
              "sourceMap": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": false,
              "statsJson": false,
              "progress": true,
              "sourceMap": {
                "scripts": true,
                "styles": true,
                "vendor": true
              }
            },
            "nodeIntegration": {
              "fileReplacements": [
                {
                  "replace": "projects/app-ziti-console/src/app/environments/environment.ts",
                  "with": "projects/app-ziti-console/src/app/environments/environment.node.ts"
                }
              ],
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "10mb",
                  "maximumError": "16mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all",
              "sourceMap": {
                "scripts": true,
                "styles": true,
                "vendor": true
              }
            }
          },
          "defaultConfiguration": "development"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "ziti-console:build:production"
            },
            "development": {
              "buildTarget": "ziti-console:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "ziti-console:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "projects/app-ziti-console/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/app-ziti-console/src/favicon.ico",
              "projects/app-ziti-console/src/assets"
            ],
            "styles": [
              "projects/app-ziti-console/src/styles.scss"
            ],
            "scripts": []
          }
        }
      }
    },
    "ziti-console-node": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/app-ziti-console",
      "sourceRoot": "projects/app-ziti-console/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/app-ziti-console-node",
            "index": "projects/app-ziti-console/src/index.html",
            "main": "projects/app-ziti-console/src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "projects/app-ziti-console/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/app-ziti-console/src/favicon.ico",
              "projects/app-ziti-console/src/assets",
              {
                "glob": "**/*",
                "input": "./node_modules/ziti-console-lib/assets/",
                "output": "/assets"
              },
              {
                "glob": "**/*",
                "input": "./node_modules/ziti-console-lib/html/",
                "output": "/assets/pages"
              }
            ],
            "styles": [
              "projects/ziti-console-lib/src/lib/shared-assets/styles/global.scss",
              "projects/app-ziti-console/src/styles.scss",
              "node_modules/primeicons/primeicons.css"
            ],
            "scripts": [],
            "preserveSymlinks": true,
            "allowedCommonJsDependencies": [
                "file-saver",
                "jquery",
                "lottie-web",
                "moment/moment",
                "lodash",
                "@stoplight/json-ref-resolver",
                "angular-csv-ext/dist/Angular-csv"
             ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "10mb",
                  "maximumError": "16mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all",
              "sourceMap": {
                "scripts": true,
                "styles": true,
                "vendor": true
              },
              "fileReplacements": [
                {
                  "replace": "projects/app-ziti-console/src/app/environments/environment.ts",
                  "with": "projects/app-ziti-console/src/app/environments/environment.node.ts"
                }
              ]
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "outputHashing": "none",
              "sourceMap": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": false,
              "statsJson": false,
              "progress": true,
              "sourceMap": {
                "scripts": true,
                "styles": true,
                "vendor": true
              },
              "fileReplacements": [
                {
                  "replace": "projects/app-ziti-console/src/app/environments/environment.ts",
                  "with": "projects/app-ziti-console/src/app/environments/environment.node.ts"
                }
              ]
            }
          },
          "defaultConfiguration": "development"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "ziti-console:build:production"
            },
            "development": {
              "buildTarget": "ziti-console:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "ziti-console:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "projects/app-ziti-console/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/app-ziti-console/src/favicon.ico",
              "projects/app-ziti-console/src/assets"
            ],
            "styles": [
              "projects/app-ziti-console/src/styles.scss"
            ],
            "scripts": []
          }
        }
      }
    },
    "ziti-console-lib": {
      "projectType": "library",
      "root": "projects/ziti-console-lib",
      "sourceRoot": "projects/ziti-console-lib/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/ziti-console-lib/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ziti-console-lib/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ziti-console-lib/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/ziti-console-lib/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
